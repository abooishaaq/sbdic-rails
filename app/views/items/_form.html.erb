<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2 class="text-xl"><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-1">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, :required => true %>
  </div>

  <div class="grid grid-cols-2 gap-1">
    <%= form.label :desc, style: "display: block" %>
    <%= form.text_area :desc, :required => true %>
  </div>

  <div class="grid grid-cols-2 gap-1">
    <%= form.label :count, style: "display: block" %>
    <%= form.number_field :count, :required => true %>
  </div>

  <div class="flex justify-center">
    <%= form.submit class: "bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 my-4 rounded text-center" %>
  </div>
<% end %>
