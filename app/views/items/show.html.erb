<p class="text-pink-500"><%= notice %></p>

<%= render @item %>

<div class="flex flex-col justify-center items-center">
  <p>
    <%= link_to "Edit", edit_item_path(@item), class: "text-pink-500 hover:text-pink-700 font-bold duration-200" %> |
    <%= link_to "Home", items_path, class: "text-pink-500 hover:text-pink-700 font-bold duration-200" %>
  </p>
  <%= button_to "Delete", @item, method: :delete, class: "my-12 bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded" %>
</div>
